<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Pump Status"
            android:layout_width="126dp"
            android:layout_height="31dp"
            android:id="@+id/pumpStatusTitleTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.211" android:textAlignment="center" android:gravity="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.23000002"/>
    <TextView
            android:text="Unknown"
            android:layout_width="102dp"
            android:layout_height="23dp"
            android:id="@+id/pumpStatusValueTextView"
            android:textAlignment="center"
            android:lineSpacingExtra="12sp" android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/pumpStatusTitleTextView" app:layout_constraintBottom_toBottomOf="@+id/pumpStatusTitleTextView"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"/>


    <TextView
            android:text="Tank 1 Level"
            android:layout_width="126dp"
            android:layout_height="31dp"
            android:id="@+id/tank1LevelTitleTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.211" android:textAlignment="center" android:gravity="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.56"/>
    <TextView
            android:text="Unknown"
            android:layout_width="102dp"
            android:layout_height="23dp"
            android:id="@+id/tank1LevelValueTextView"
            android:textAlignment="center"
            android:lineSpacingExtra="12sp" android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/tank1LevelTitleTextView" app:layout_constraintBottom_toBottomOf="@+id/tank1LevelTitleTextView"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"/>

    <TextView
            android:text="Tank 2 Level"
            android:layout_width="126dp"
            android:layout_height="31dp"
            android:id="@+id/tank2LevelTitleTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.211" android:textAlignment="center" android:gravity="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.65"/>
    <TextView
            android:text="Unknown"
            android:layout_width="102dp"
            android:layout_height="23dp"
            android:id="@+id/tank2LevelValueTextView"
            android:textAlignment="center"
            android:lineSpacingExtra="12sp" android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/tank2LevelTitleTextView" app:layout_constraintBottom_toBottomOf="@+id/tank2LevelTitleTextView"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"/>
    <Button
            android:text="Toggle Pump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/togglePumpButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/pumpStatusTitleTextView"
            app:layout_constraintHorizontal_bias="0.498"/>

</android.support.constraint.ConstraintLayout>